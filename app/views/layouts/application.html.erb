<!DOCTYPE html>
<html>
  <head>
    <title>Maticsport</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag 'logo1.png' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="flex-content-container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <%= link_to image_tag( "logo5.png" ), root_path, class: 'navbar-brand' %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <%= link_to 'HOME', root_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'ABOUT US', about_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'SERVICES', service_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'TOURS', tour_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'GALLERY', gallery_path, class: 'nav-link' %>
                    </li>
                </ul>
                <ul class="navbar-nav">
                  <% if user_signed_in? %>
                    <li class="nav-item">
                      <%= link_to 'SIGN OUT', destroy_user_session_path, method: :delete, class: 'nav-link' %>
                    </li>
                  <% else %>
                    <li class="nav-item">
                      <%= link_to 'SIGN IN', new_user_session_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                      <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
                    </li>
                  <% end %>
                </ul>
            </div>
        </nav>


        <% if notice.present? %>
          <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>

      <%= yield %>
    </div>

    <div id="footer">
      <div class="container">
        <div class="row">
          <div class="col-12 col-sm-3">
            <b>About</b>
            <br />
            <%= link_to 'About us', about_path %>
            <br />
            <%= link_to 'Policies', policy_path %>
          </div>
          <hr />
          <div class="col-12 col-sm-3">
            <b>Tours</b>
            <br />
            <%= link_to 'Our tours', tour_path %>
            <br />
            <%= link_to 'Gallery', gallery_path %>
            <br />
            <%= link_to 'Services', service_path %>
          </div>
          <hr />
          <div class="col-12 col-sm-3">
            <b>Contact</b>
            <br />
            Alba-Leea Campos
            <br />
            alba.leea@maticsport.com
            <br />
            3550 S Harlan St Unit 125
            <br />
            Denver, CO 80235
            <br />
            Tel: (720) 419-7316
          </div>
          <hr />
          <div class="col-12 col-sm-3 social">
            <b>Social</b>
            <br />
            <br />
            <%= link_to 'https://www.facebook.com/Matic-Sports-474938593299209/', target:"_blank" do %>
              <span class="fa fa-facebook-square fa-2x socila-button"></span>
            <% end %>
            <%= link_to 'https://www.twitter.com/MaticSprt', target:"_blank" do %>
              <span class="fa fa-twitter-square fa-2x socila-button"></span>
            <% end %>
            <%= link_to 'https://instagram.com/matic.sport', target:"_blank" do %>
              <span class="fa fa-instagram fa-2x socila-button"></span>
            <% end %>
            <%= link_to 'https://www.youtube.com/channel/UCHNyRfuJrvJxGGoJjfRyrsQ', target:"_blank" do %>
              <span class="fa fa-youtube fa-2x socila-button"></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <a class="topbtn" href="#"><i class="fa fa-arrow-up fa-2x"></i></a> 
  </body>
</html>
